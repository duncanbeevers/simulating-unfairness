.number-line {
  display: flex;
  align-items: center;
  width: 80%;
  padding: 12px 48px;
  flex-wrap: nowrap;

  .number-line-portion {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 48px;
    transition: transform 0.2s ease, width 0.2s ease, opacity 0.5s ease;
    transform: translateY(0);

    &:first-of-type {
      margin-left: 12px;
      border-top-left-radius: 4px;
      border-bottom-left-radius: 4px;
    }
    &:last-of-type {
      margin-right: 12px;
      border-top-right-radius: 4px;
      border-bottom-right-radius: 4px;
    }

    &:nth-of-type(1) { background-color: #7F2192; }
    &:nth-of-type(2) { background-color: #6843A8; }
    &:nth-of-type(3) { background-color: #538688; }
    &:nth-of-type(4) { background-color: #5B97BA; }
    &:nth-of-type(5) { background-color: #95AFA7; }
    &:nth-of-type(6) { background-color: #59BA7C; }
  }

  &.bare {
    .number-line-portion {
      background-color: #2100B5;
    }

    pointer-events: none;
  }

}

