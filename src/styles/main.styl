.zero-one-cheater {
  position: relative;
  top: -71.5px;
  pointer-events: none;

  .number-line-portion: {
    opacity: 0;
  }
}

.shrink-number-line {
  .number-line-portion {
    transition: font-size 0.5s linear;
  }
  transition: width 0.5s ease;
}

.grow-number-line {
  .number-line-portion {
    transition: font-size 0.5s linear, color 0.5s ease-in;
  }
  transition: width 0.5s ease-in;
}

.bespoke-bullet-active {
  .shrink-number-line {
    .number-line-portion {
      font-size: 0;
    }
    width: 16%;
  }

  .grow-number-line {
    .number-line-portion {
      font-size: auto;
    }
    width: 100%;
  }

  &.bespoke-bullet-current {
    .shrink-number-line {
      .number-line-portion {
        font-size: auto;
      }
      width: 100%;
    }

    .grow-number-line {
      .number-line-portion {
        font-size: 0;
        color: transparent;
      }
      width: 16%;
    }
  }
}

.one-to-six-parent {
  .one-to-six-one {
    transition: opacity 0.5s ease-in;
    position: absolute;
    top: 0;
    left: 0;
  }

  .one-to-six-six {
    transition: opacity 0.5s ease-in;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  flex-basis: 0;
  position: relative;
  display: flex;
  height: 34px;
}

.bespoke-bullet-active {
  .one-to-six-parent {
    .one-to-six-one {
      opacity: 0;
    }
    .one-to-six-six {
      opacity: 1;
    }
  }

  &.bespoke-bullet-current {
    .one-to-six-parent {
      .one-to-six-one {
        opacity: 1;
      }

      .one-to-six-six {
        opacity: 0;
      }
    }
  }
}

