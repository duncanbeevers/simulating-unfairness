.bucket-line {
  .bucket-line-portion {
    width: 100%;
    display: flex;
    flex-direction: column;
    height: 256px;
    border: 4px solid #0e223f;
    border-radius: 4px;
    margin: 4px;
    padding: 4px;
    background-clip: border-box;
    .number-line-portion {
      display: flex;
      flex-direction: column;
      width: 100%;
      border-radius: 4px;
      justify-content: center;

      margin: 2px 0;
      &.null {
        visiblity: hidden;
      }
    }
  }

  display: flex;
  justify-content: space-around;
  width: 80%;

  &.short {
    .bucket-line-portion {
      height: 128px;
    }
  }
}

.bucket-phase {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transition: opacity 0.1s ease 0.1s;

  &.bespoke-bullet-current {
    transition: opacity 0.1s ease;
    opacity: 1;
  }
}

