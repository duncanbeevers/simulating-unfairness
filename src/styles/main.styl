.bespoke-bullet-inactive {
  .domino {
    .number-line-portion {
      transform: translateY(-14px);
    }
  }
}

.bespoke-bullet-active {
  .domino-one {
    .number-line-portion {
      &:nth-of-type(1) { transition: transform 0.3s ease 1s; }
      &:nth-of-type(2) { transition: transform 0.3s ease 1.5s; }
    }
  }

  .domino-two {
    .number-line-portion {
      &:nth-of-type(1) { transition: transform 0.3s ease 0.3s; }
      &:nth-of-type(2) { transition: transform 0.3s ease 0.6s; }
      &:nth-of-type(3) { transition: transform 0.3s ease 0.9s; }
      &:nth-of-type(4) { transition: transform 0.3s ease 1.2s; }
      &:nth-of-type(5) { transition: transform 0.3s ease 1.5s; }
      &:nth-of-type(6) { transition: transform 0.3s ease 1.8s; }
    }
  }

  &.bespoke-bullet-current {
    .domino {
      .number-line-portion {
        transform: translateY(0);
      }
    }
  }
}

